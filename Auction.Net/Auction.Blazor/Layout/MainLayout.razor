@inherits LayoutComponentBase
    <div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>

            
        <div class="top-row px-4 justify-content-between ">
        <AuthorizeView Roles="standard">
                <a class="mx-0" href="#">Se Torne Vip</a>
        </AuthorizeView>
